<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="4.25"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drivercolor"
    tools:context=".SignUpORSIgnIn">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight=".5"
        android:src="@drawable/signuplogo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Welcome to JU BUS"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:textColor="#67961A"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/signupbus"
        />
    <TextView
        android:textColor="#67961A"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:layout_marginBottom="30dp"
        android:text="Sign Up here"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="#FFFFFf"
        android:shadowColor="#FFFFFF"
        android:hint="Enter Your Phone Number"
        android:id="@+id/phonenumber"
        android:inputType="number"
        android:gravity="center"
        android:textColor="#05E60D"
        />


    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:textSize="20dp"
            android:onClick="SendOTP"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#67961A"
            android:text="Send OTP"
            android:textAllCaps="false"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>